<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="436dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/txtInstrumentTitle"
                android:layout_width="366dp"
                android:layout_height="151dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="24dp"
                android:textAlignment="center"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/instrumentImageDesc"
                android:layout_width="360dp"
                android:layout_height="357dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="58dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtInstrumentTitle"
                app:srcCompat="@drawable/guitarra_01" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="354dp"
                android:layout_height="265dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="49dp"
                android:textSize="24sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/instrumentImageDesc" />

            <Button
                android:id="@+id/button"
                android:layout_width="396dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:text="Agregar al Carrito"
                app:icon="@drawable/cart_svgrepo_com"
                app:iconGravity="textStart"
                app:iconSize="30dp"
                app:iconTint="#FBF5F5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>
